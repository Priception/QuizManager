    <body style="background-color:@Model.GetColours(2);">
            <form class="form-horizontal" method="post">
                <div class="CommentBox">
                    <div class="Text">
                        <b style="text-align:center; font-size:30px; color:black;">@Model.GetCurrentQuizQuestion()</b>
                    </div>
                    <div class="form-group">
                        <div class="TextBoxQuestion" >
                            <input style="border-style:solid; border-color:black; border-width:3px;" class="form-control" id="QuizAnswer1" name="QuizQuestion" value="@Model.GetCurrentQuizAnswerQuestion(2)" >
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="TextBox" >
                            <input style="border-style:solid; border-color:black; border-width:3px;" class="form-control" id="QuizAnswer1" name="QuizAnswer1" value="@Model.GetCurrentQuizAnswerQuestion(3)" >
