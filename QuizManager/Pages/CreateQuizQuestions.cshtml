                        <b style="color:black; top: 60%; right: 2%; position: absolute;">(Remember This Value)</b>
                    </div>
                    <button type="Create" asp-page-handler="CreateQuizInfoAdd" class="AddButton text-under">Add</button>
                    <button type="Create" asp-page-handler="CreateQuizInfoDelete" hidden="@Model.CreateQuizShouldShowDeleteButton()" class="DeleteButton text-under">Del</button>
