                        </div>
                    </div>
                    <div class="Text2">
                        <b style="color:black; top: 20%; right: 70%; position: absolute;">Question Name:</b>
                    </div>
                    <div class="Text2">
                        <b style="color:black; top: 42%; right: 80%; position: absolute;">Answer 1:</b>
                    </div>
                    <div class="Text2">
                        <b style="color:black; top: 42%; right: 30%; position: absolute;">Answer 2:</b>
                    </div>
                    <div class="Text2">
                        <b style="color:black; top: 62%; right: 80%; position: absolute;">Answer 3:</b>
                    </div>
                    <div class="Text2">
                        <b style="color:black; top: 62%; right: 30%; position: absolute;">Answer 4:</b>
                    </div>
                    <div class="checkbox">
                        <input type="radio" id="answer1pick" name="answerpick" value="1" checked="@Model.GetCurrentQuizRadioButton(1)" style="top:48.5%; right:90%; position: absolute; width:3%; height:3%;">
                    </div>
                    <div class="checkbox">
                        <input type="radio" id="answer2pick" name="answerpick" value="2" checked="@Model.GetCurrentQuizRadioButton(2)" style="top:48.5%; right:40%; position: absolute; width:3%; height:3%;">
                    </div>
                    <div class="checkbox">
                        <input type="radio" id="answer3pick" name="answerpick" value="3" checked="@Model.GetCurrentQuizRadioButton(3)" style="top:68.5%; right:90%; position: absolute; width:3%; height:3%;">
                    </div>
                    <div class="checkbox">
                        <input type="radio" id="answer4pick" name="answerpick" value="4" checked="@Model.GetCurrentQuizRadioButton(4)" style="top:68.5%; right:40%; position: absolute; width:3%; height:3%;">
                    </div>
                    <button type="Create" asp-page-handler="CreateQuizInfoSave" class="JoinButton text-under">Save</button>
