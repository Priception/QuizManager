@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
.TextBox{
    top: 50%;
    right: 50%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    font-size: 36px;
    /*border:3px solid #000000;*/
    width: 50%;
}
.Text{
    padding: 0%;
    justify-content: center;
    display: flex;
    font-weight: bold;
    font-size: 2vw;
}
.Text2{
    padding: 0%;
    justify-content: center;
    display: flex;
    font-weight: bold;
    font-size: 2vw;
}

.EnterText{
    top: 42%;
    right: 61%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(42%);
    transform: translateY(-50%) translateX(42%);
}
.JoinButton{
    top: 50%;
    right: 60%;
    position: absolute;
    background-color:#0a8a06;
    margin: 0 auto;
    width: 30%;
    height: 20%;
    font-size: 33px;
    line-height: 1.4;
    text-align: center;
    list-style-type: none;
    list-style-position: outside;
    text-decoration: none;
}
.JoinButton:hover{
    background-color:#043b02!important;
    text-decoration: none;
    color: #FFFFFF;
}
.LoadButton{
    top: 50%;
    right: 10%;
    position: absolute;
    background-color:#c3c3c3;
    margin: 0 auto;
    width: 30%;
    height: 20%;
    font-size: 33px;
    line-height: 1.4;
    text-align: center;
    list-style-type: none;
    list-style-position: outside;
    text-decoration: none;
}
.LoadButton:hover{
    background-color:#757575!important;
    text-decoration: none;
    color: #FFFFFF;
}

.text-under{
    display:block;
    font-size: 2vw;
}
.createQuizBox{
    width:20%;
    height:30%;
    border:5px solid @Model.GetColours(0);
    position: fixed;
    top: 25%;
    right: 75%;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    margin:0 auto;
    background-color:@Model.GetColours(1);
}
.recentQuizBox{
    width:20%;
    height:30%;
    border:5px solid @Model.GetColours(0);
    position: fixed;
    top: 65%;
    right: 75%;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    margin:0 auto;
    background-color:@Model.GetColours(1);
}
</style>

<body style="background-color:@Model.GetColours(2);">

    <div class="createQuizBox">
        <div class="Text" style="color:black;">Create</div>
        <a asp-page="/CreateQuizInfo">
            <div class="JoinButton">
                <b class="text-under" style="color:black;">New</b>
            </div>
        </a>
        <div class="LoadButton">
            <b class="text-under" style="color:black;">Load</b>
        </div>
    </div>

    <div class="recentQuizBox">
        <div>
            <div class="Text2" style="color:black;">Recent</div><br>
        </div>
    </div>
    

</body>

