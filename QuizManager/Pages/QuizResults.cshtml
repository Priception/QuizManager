@page
@model QuizManager.Pages.IndexModel
@{
}
<style>
.CommentBox{
    width:80%;
    height:80%;
    border:5px solid @Model.GetColours(0);
    position: absolute;
    top: 52%;
    right: 45%;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    margin:0 auto;
    background-color:@Model.GetColours(1);
}
.TextBox{
    top: 50%;
    right: 50%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    font-size: 1.8vw;
    /*border:3px solid #000000;*/
    width: 50%;
}
.Text{
    right: 45%;
    position: absolute;
    font-size: 2vw;
}
.Text2{
    font-size: 3vw;
}

.EnterText{
    top: 38%;
    right: 61%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(42%);
    transform: translateY(-50%) translateX(42%);
}
.JoinButton{
    top: 65%;
    right: 48%;
    position: absolute;
    background-color:#0a8a06;
    margin: 0 auto;
    width: 10%;
    height: 15%;
    font-size: 33px;
    line-height: 1.4;
    text-align: center;
    list-style-type: none;
    list-style-position: outside;
    text-decoration: none;
}
.JoinButton:hover{
    background-color:#043b02!important;
    text-decoration: none;
    color: #FFFFFF;
}
.text-under{
    display:block;
    font-size: 1.8vw;  
}
.BackButton{
            top: 85%;
            right: 45%;
            position: absolute;
            background-color:#52504d;
            margin: 0 auto;
            width: 10%;
            height: 8%;
            font-size: 1.8vw;
            line-height: 1.4;
            text-align: center;
            list-style-type: none;
            list-style-position: outside;
            text-decoration: none;
        }
.BackButton:hover{
            background-color:#363533!important;
            text-decoration: none;
            color: #FFFFFF;
}
</style>

<body style="background-color:@Model.GetColours(2);">
    <form class="form-horizontal" method="post">
        <div class="CommentBox">
            <div class="Text">
                <b style="text-align:center; font-size:30px; color:black;">Results:</b><br>
            </div>
            <div class="Text2">
                <b style="color:black; top: 40%; right: 38%; position: absolute;">You Scored:</b>
            </div>
            <div class="Text2">
                <b style="color:black; top: 50%; right: 40%; position: absolute;">@Model.GetJoinQuizResults()</b>
            </div>
            <button type="Create" asp-page-handler="AnswerQuizInfoBack" class="BackButton text-under">Exit</button>
        </div>
    </form>
    

</body>