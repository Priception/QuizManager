@page
@model QuizManager.Pages.IndexModel
@{
}
<style>
.CommentBox{
    width:80%;
    height:80%;
    border:5px solid @Model.GetColours(0);
    position: absolute;
    top: 52%;
    right: 45%;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    margin:0 auto;
    background-color:@Model.GetColours(1);
}
.TextBox{
    top: 50%;
    right: 50%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    font-size: 1.8vw;
    /*border:3px solid #000000;*/
    width: 50%;
}
.Text{
    position: absolute;
    font-size: 2vw;
}
.Text2{
    font-size: 1.2vw;
}

.EnterText{
    top: 20%;
    right: 20%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(42%);
    transform: translateY(-50%) translateX(42%);
}
.JoinButton{
    top: 75%;
    right: 82%;
    position: absolute;
    background-color:#0a8a06;
    margin: 0 auto;
    width: 8%;
    height: 6%;
    font-size: 11px;
    line-height: 1.4;
    text-align: center;
    list-style-type: none;
    list-style-position: outside;
    text-decoration: none;
}
.JoinButton:hover{
    background-color:#043b02!important;
    text-decoration: none;
    color: #FFFFFF;
}
.text-under{
    display:block;
    font-size: 1vw;  
}
img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}
.imagelogo{
    top: 35%;
    right: 13%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(42%);
    transform: translateY(-50%) translateX(42%);
    height: 150px;
    width: 350px;
    font-size: 1vw;
}
.browsebutton{
    top: 50%;
    right: 21%;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(42%);
    transform: translateY(-50%) translateX(42%);
    font-size: 1vw;
}
.colourbox{
    width:8%;
    height:7%;
    border:5px solid black;
    position: absolute;
    -ms-transform: translateY(-50%) translateX(50%);
    transform: translateY(-50%) translateX(50%);
    margin:0 auto;
}
.colourboxtext{
     position: absolute;
     -ms-transform: translateY(-50%) translateX(42%);
     transform: translateY(-50%) translateX(42%);
     font-size: 1.5vw;
}
</style>

<body style="background-color:@Model.GetColours(2);">

    <div class="CommentBox">
        <div class="Text" style="right: 50%;">
            <b style="text-align:center; font-size:30px; color:black;">Settings</b>
        </div>
        <div class="EnterText">
            <div class="Text2" style="color:black; right:70%; top:25%;">Company Logo:</div>
        </div>
        <div class="imagelogo">
            <img src="~/images/logo.png"/>  
        </div>
        <div class="browsebutton">
            <button>Browse...</button>
        </div>
        <form class="form-horizontal" method="post">
            <input type="color" class="colourbox" name="colour1" value="@Model.GetColours(0)" style="top:30%; right:92%;"></input>
            <div class="colourboxtext" style="color:black; top:30%; right:79%;">Primary Colour</div>
            <input type="color" class="colourbox" name="colour2" value="@Model.GetColours(1)" style="top:45%; right:92%;"></input>
            <div class="colourboxtext" style="color:black; top:45%; right:78%;">Secondary Colour</div>
            <input type="color" class="colourbox" name="colour3" value="@Model.GetColours(2)" style="top:60%; right:92%;"></input>
            <div class="colourboxtext" style="color:black; top:60%; right:79%;">Tertiary Colour</div>
            <button type="Create" asp-page-handler="ColourChange" class="JoinButton text-under">Apply</button>
        </form>

        
    </div>
    

</body>