<!DOCTYPE html>
@model QuizManager.Pages.IndexModel
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizManager.styles.css" asp-append-version="true" />
</head>
<style>
table{
    height: 100%;
}
th, td {
  padding: 15px;
}
th:hover, td:hover{
  padding: 15px;
}
.NavButton {
    width: 120%;
    background-color:@Model.GetColours(1);
}
.NavButton:hover {
  background-color:@Model.GetColours(1)!important;
  filter: brightness(60%);
}
.Empty {
    width: 120%;
    background-color:@Model.GetColours(1);
}
.hide {
  visibility: hidden;
  border: none;
}
.text {
    padding: 40%;
    justify-content: center;
    display: flex;
    font-weight: bold;
    font-size: 2vw;
}
.textdouble {
    padding: 25%;
    justify-content: center;
    display: flex;
    font-weight: bold;
    font-size: 2vw;
}
a {
  color: inherit;
  text-decoration: inherit;
}
.LogOutButton{
            top: 1%;
            right: 1%;
            position: absolute;
            background-color:#ba0606;
            margin: 0 auto;
            width: 5%;
            height: 5%;
            font-size: 1.2vw;
            line-height: 1;
            text-align: center;
            list-style-type: none;
            list-style-position: outside;
            text-decoration: none;
        }
.LogOutButton:hover{
            background-color:#690202!important;
            text-decoration: none;
            color: #FFFFFF;
}
</style>
<body>    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:@Model.GetColours(0);">
            <div class="container">
                <a class="navbar-brand" id="Logo" asp-area="" asp-page="/Index">QuizManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
        <form class="form-horizontal" method="post">
            <button type="Create" hidden="@Model.ShowLogOutButton()" asp-page-handler="LogOut" class="LogOutButton">Log Out</button>
        </form>
    </header>

    <div style="position: absolute; top: 0; bottom: 0; visibility: @Model.ShowNavigationBar();">
        <div class="hide" style="height: 5%; font-size: 36px; color:black;">
            <div></div>
        </div>
        <a asp-page="/CreateQuiz">
            <div class="NavButton" style="height: 20%; font-size: 36px; color:black;">
                <div class="text">Create</div>
            </div>
        </a>
        <a asp-page="/JoinPage">
            <div class="NavButton" style="height: 20%; font-size: 36px; color:black;">
                <div class="text">Join</div>
            </div>
        </a>
        <a asp-page="/ManageClass">
            <div class="NavButton" style="height: 20%; font-size: 36px; color:black;">
                <div class="textdouble">Manage<br>  Class</div>
            </div>
        </a>
        <a asp-page="/Settings">
            <div class="NavButton" style="height: 20%; font-size: 36px; color:black;">
                <div class="text">Settings</div>
            </div>
        </a>
        <div class="Empty" style="height: 10%; font-size: 36px; color:black;">
            <div></div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:@Model.GetColours(0)">
        <div class="container">
            &copy; 2022 - QuizManager</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>